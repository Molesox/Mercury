@using Mercury.Shared.Models;

@using Mercury.Shared.Models;

@code {
    [Parameter] public CommandButtonStr ButtonStr { get; set; }

    public ButtonSize Size => Enum.TryParse(ButtonStr.Size, out ButtonSize result) ? result : ButtonSize.Small;
    public Variant Variant => Enum.TryParse(ButtonStr.Variant, out Variant result) ? result : Variant.Filled;
    public ButtonStyle ButtonStyle => Enum.TryParse(ButtonStr.ButtonStyle, out ButtonStyle result) ? result : ButtonStyle.Light;
}

<RadzenButton Size="@Size" Variant="@Variant" ButtonStyle="@ButtonStyle" Icon="@ButtonStr.Icon" Text="@ButtonStr.Text" />

