                            <RadzenStack Gap="0">

                                <RadzenText TextStyle="TextStyle.H6" Text="David Tortosa Codoñer"></RadzenText>
                                <RadzenText Text="david.tortosa@gmail.com"></RadzenText>
                            </RadzenStack>
