            </Template>
            <ChildContent>
                <RadzenStack Gap="0">

                    <RadzenCard Class="rz-background-color-base-700 rz-border-color-white  rz-m-2">
                        <RadzenStack Orientation="Orientation.Horizontal">

                            <RadzenImage Path="Images/photo_dani.jpg"
