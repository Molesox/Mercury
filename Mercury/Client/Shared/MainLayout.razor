@inherits LayoutComponentBase

<RadzenLayout>

    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center"
            JustifyContent="JustifyContent.SpaceBetween">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
                <RadzenSidebarToggle Click="@(() => sidebar1Expanded = !sidebar1Expanded)" />
                <RadzenLabel Text="Mercury" />
            </RadzenStack>
            <RadzenRow Class="rz-px-3">
                <LoginDisplay />
            </RadzenRow>
        </RadzenStack>

    </RadzenHeader>

    <RadzenSidebar @bind-Expanded="@sidebar1Expanded">
        <NavMenu />
    </RadzenSidebar>

    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>

    <RadzenFooter  class="rz-p-1">
        <RadzenStack Orientation="Orientation.Horizontal" Style="height:10px" AlignItems="AlignItems.Start">
            
                <RadzenText TextStyle="TextStyle.Overline" Text="Galax.ia SA" />
            </RadzenStack>


    </RadzenFooter>
</RadzenLayout>

@code {
    bool sidebar1Expanded = true;
}